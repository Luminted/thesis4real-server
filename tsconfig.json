{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "es6",
        "module": "commonjs",
        "sourceMap": true,
        "esModuleInterop": true,
        "outDir": "./build",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "noUnusedParameters": true,
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", ".vscode"]
}